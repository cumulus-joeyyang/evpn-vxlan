source /etc/network/interfaces.d/*.intf

# The loopback network interface
auto lo
iface lo inet loopback
    # The primary network interface
    address 10.0.0.13/32
    clagd-vxlan-anycast-ip 10.0.0.134

# The primary network interface
auto eth0
iface eth0 inet dhcp

auto swp1
iface swp1

auto swp2
iface swp2

auto swp49
iface swp49

auto swp50
iface swp50

auto swp51
iface swp51

auto swp52
iface swp52

auto server01
iface server01
    bond-lacp-bypass-allow yes
    bond-slaves swp1
    clag-id 1
    bridge-vids 88 66 77

auto server02
iface server02
    bond-lacp-bypass-allow yes
    bond-slaves swp2
    clag-id 2
    bridge-vids 88 66 77

auto tenant-sym5
iface tenant-sym5
    vrf-table auto
    
auto bridge
iface bridge
    bridge-ports peerlink vni10088 vni10066 vni10077 vni104003 server01 server02
    bridge-vids 88 66 77 4003
    bridge-vlan-aware yes

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    address 169.254.1.1/30
    clagd-peer-ip 169.254.1.2
    clagd-priority 1000
    clagd-sys-mac 44:38:39:ff:00:34

auto vlan88
iface vlan88
    address 10.0.88.253/24
    address-virtual 00:00:5e:88:88:88 10.0.88.1/24
    vlan-id 88
    vlan-raw-device bridge
    vrf tenant-sym5

auto vlan66
iface vlan66
    address 10.0.66.253/24
    address-virtual 00:00:5e:66:66:66 10.0.66.1/24
    vlan-id 66
    vlan-raw-device bridge
    vrf tenant-sym5

auto vlan77
iface vlan77
    address 10.0.77.253/24
    address-virtual 00:00:5e:77:77:77 10.0.77.1/24
    vlan-id 77
    vlan-raw-device bridge
    vrf tenant-sym5

auto vlan4003
iface vlan4003
    hwaddress 44:39:39:ff:03:34
    vlan-id 4003
    vlan-raw-device bridge
    vrf tenant-sym5

auto vni10088
iface vni10088
    bridge-access 88
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10088
    vxlan-local-tunnelip 10.0.0.13

auto vni10066
iface vni10066
    bridge-access 66
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10066
    vxlan-local-tunnelip 10.0.0.13

auto vni10077
iface vni10077
    bridge-access 77
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10077
    vxlan-local-tunnelip 10.0.0.13

auto vni104003
iface vni104003
    bridge-access 4003
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 104003
    vxlan-local-tunnelip 10.0.0.13

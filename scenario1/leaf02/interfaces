source /etc/network/interfaces.d/*.intf

# The loopback network interface
auto lo
iface lo inet loopback
    # The primary network interface
    address 10.0.0.12/32
    clagd-vxlan-anycast-ip 10.0.0.112

# The primary network interface
auto eth0
iface eth0 inet dhcp

auto swp1
iface swp1

auto swp2
iface swp2

auto swp49
iface swp49

auto swp50
iface swp50

auto swp51
iface swp51

auto swp52
iface swp52

auto tenant-cen00
iface tenant-cen00
    vrf-table auto

auto tenant-cen12
iface tenant-cen12
    vrf-table auto

auto server01
iface server01
    bond-lacp-bypass-allow yes
    bond-slaves swp1
    clag-id 1
    bridge-vids 10 20 11 22

auto server02
iface server02
    bond-lacp-bypass-allow yes
    bond-slaves swp2
    clag-id 2
    bridge-vids 10 20 11 22

auto bridge
iface bridge
    bridge-ports peerlink vni10010 vni10020 server01 server02 vni10011 vni10022
    bridge-vids 10 20 11 22
    bridge-vlan-aware yes

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    address 169.254.1.2/30
    clagd-peer-ip 169.254.1.1
    clagd-priority 2000
    clagd-sys-mac 44:38:39:ff:00:12

auto vlan10
iface vlan10
    vlan-id 10
    vlan-raw-device bridge
    ip-forward off

auto vlan20
iface vlan20
    vlan-id 20
    vlan-raw-device bridge
    ip-forward off

auto vlan11
iface vlan11
    vlan-id 11
    vlan-raw-device bridge
    ip-forward off

auto vlan22
iface vlan22
    vlan-id 22
    vlan-raw-device bridge
    ip-forward off

auto vni10010
iface vni10010
    bridge-access 10
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10010
    vxlan-local-tunnelip 10.0.0.12

auto vni10020
iface vni10020
    bridge-access 20
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10020
    vxlan-local-tunnelip 10.0.0.12

auto vni10011
iface vni10011
    bridge-access 11
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10011
    vxlan-local-tunnelip 10.0.0.12

auto vni10022
iface vni10022
    bridge-access 22
    bridge-learning off
    bridge-arp-nd-suppress on
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10022
    vxlan-local-tunnelip 10.0.0.12

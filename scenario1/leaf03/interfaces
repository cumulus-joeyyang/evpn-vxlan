source /etc/network/interfaces.d/*.intf

# The loopback network interface
auto lo
iface lo inet loopback
    # The primary network interface
    address 10.0.0.13/32
    clagd-vxlan-anycast-ip 10.0.0.134

# The primary network interface
auto eth0
iface eth0 inet dhcp

auto swp1
iface swp1

auto swp2
iface swp2

auto swp49
iface swp49

auto swp50
iface swp50

auto swp51
iface swp51

auto swp52
iface swp52

auto tenant-cen
iface tenant-cen
    vrf-table auto

auto server03
iface server03
    bond-lacp-bypass-allow yes
    bond-slaves swp1
    clag-id 1
    bridge-vids 10 20

auto server04
iface server04
    bond-lacp-bypass-allow yes
    bond-slaves swp2
    clag-id 2
    bridge-vids 10 20
    
auto bridge
iface bridge
    bridge-ports peerlink vni10010 vni10020 server03 server04
    bridge-vids 10 20
    bridge-vlan-aware yes

auto peerlink
iface peerlink
    bond-slaves swp49 swp50

auto peerlink.4094
iface peerlink.4094
    address 169.254.1.1/30
    clagd-peer-ip 169.254.1.2
    clagd-priority 1000
    clagd-sys-mac 44:38:39:ff:00:34

auto vlan10
iface vlan10
    vlan-id 10
    vlan-raw-device bridge
    vrf tenant-cen

auto vlan20
iface vlan20
    vlan-id 20
    vlan-raw-device bridge
    vrf tenant-cen

auto vni10010
iface vni10010
    bridge-access 10
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10010
    vxlan-local-tunnelip 10.0.0.13

auto vni10020
iface vni10020
    bridge-access 20
    bridge-learning off
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    vxlan-id 10020
    vxlan-local-tunnelip 10.0.0.13
